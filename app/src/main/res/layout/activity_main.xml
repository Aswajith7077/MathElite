<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_screen_bg"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/deg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ME"
        android:textSize="16dp"
        android:textStyle="bold"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:gravity="right"
        android:textColor="@color/white"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deg"
        android:textSize="25dp"
        android:padding="17dp"
        android:gravity="left"
        android:textColor="@color/gray"
        android:id="@+id/input_string"
        />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_string"
        android:id="@+id/text_area_scroll"
        android:layoutDirection="ltr"
        android:scrollbars="none"
        >
        <TextView
            android:id="@+id/text_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollHorizontally="true"

            android:scrollbars="none"
            android:textSize="60dp"
            android:text="0"
            android:textColor="@color/white"
            android:gravity="end"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp"

            />
    </HorizontalScrollView>

<!--    android:layout_above="@+id/nav_bar"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/text_area_scroll"


        android:orientation="vertical"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:weightSum="4"
            android:paddingHorizontal="5dp"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ac"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/button_style"
                android:text="AC"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_margin="3dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/par_open"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/button_style"
                android:text="("
                android:textSize="30dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_margin="3dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/par_close"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/button_style"
                android:text=")"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_margin="3dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/div"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/special_button_style"
                android:text="รท"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_margin="3dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:weightSum="4"
            android:paddingHorizontal="10dp"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/seven"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/button_style"
                android:text="7"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_margin="3dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/eight"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/button_style"
                android:text="8"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_margin="3dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nine"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/button_style"
                android:text="9"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_margin="3dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/mul"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/special_button_style"
                android:text="ร"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_margin="3dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:weightSum="4"
            android:paddingHorizontal="10dp"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/four"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/button_style"
                android:text="4"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_margin="3dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/five"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/button_style"
                android:text="5"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_margin="3dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/six"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/button_style"
                android:text="6"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_margin="3dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sub"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/special_button_style"
                android:text="-"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_margin="3dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:weightSum="4"
            android:paddingHorizontal="10dp"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/one"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/button_style"
                android:text="1"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_margin="3dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/two"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/button_style"
                android:text="2"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_margin="3dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/three"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/button_style"
                android:text="3"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_margin="3dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/add"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/special_button_style"
                android:text="+"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_margin="3dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:paddingHorizontal="10dp"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/zero"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/button_style"
                android:text="0"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_margin="3dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dot"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/button_style"
                android:text="."
                android:textSize="30dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_margin="3dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bs"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/button_style"
                android:text="โซ"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_margin="3dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/eq"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/special_button_style"
                android:text="="
                android:textSize="30dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_margin="3dp"
                />
        </LinearLayout>
    </LinearLayout>

